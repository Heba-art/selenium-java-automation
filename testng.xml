<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="SauceDemo Full Suite" verbose="1" parallel="false">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.mycompany.selenium_automation_project.util.TestListener"/>
    </listeners>

    <test name="Run All Tests by Package">
        <packages>
            <!-- Run all test classes under the tests package -->
            <package name="com.mycompany.selenium_automation_project.tests"/>
        </packages>
    </test>
</suite>
